generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id                  String     @id      @default(uuid())
  username            String
  password            String
  gender              Gender
  channelName         String    
  banner              String?
  profilePicture      String?
  subscriberCount     Int       @default(0)
  description         String?
  uploads             Uploads[]
}

model Uploads {
  id                String     @id      @default(uuid())
  title             String     @default("")
  videoUrl          String
  thumbnail         String
  userId            String
  user              User      @relation(fields: [userId], references: [id])
  createdAt         DateTime  @default(now())
}

enum Gender {
  Male
  Female
  Other
}